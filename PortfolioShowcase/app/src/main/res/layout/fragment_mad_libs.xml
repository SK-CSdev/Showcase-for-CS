<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Stage 1: Story Selection -->
        <TextView
            android:id="@+id/titleTextView"
            android:text="Choose a Mad Lib Story!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/story1Button"
            android:text="Story 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/story2Button"
            android:text="Story 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/story3Button"
            android:text="Story 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/randomButton"
            android:text="I'm Feeling Lucky ðŸŽ²"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Stage 2: Word Inputs -->
        <LinearLayout
            android:id="@+id/inputLayout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/inputPrompt"
                android:text="Enter your words below:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- 8 EditTexts for user input -->
            <EditText android:id="@+id/input1" android:hint="Enter a noun" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/input2" android:hint="Enter a verb" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/input3" android:hint="Enter an adjective" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/input4" android:hint="Enter an animal" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/input5" android:hint="Enter a place" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/input6" android:hint="Enter another noun" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/input7" android:hint="Enter a number" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/input8" android:hint="Enter a color" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/generateButton"
                android:text="Generate Story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <!-- Stage 3: Story Output -->
        <LinearLayout
            android:id="@+id/outputLayout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/storyTextView"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/restartButton"
                android:text="Start Over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
