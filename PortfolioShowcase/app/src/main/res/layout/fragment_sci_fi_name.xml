<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".ui.scifiname.SciFiNameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸª Sci-Fi Name Generator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="#000000" />

        <!-- Input Fields -->
        <EditText
            android:id="@+id/firstNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your first name"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/lastNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your last name"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/cityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your city of birth"
            android:inputType="textCapWords"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/schoolInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your school name"
            android:inputType="textCapWords"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/petInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your favorite pet or food"
            android:inputType="textCapWords"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/characterInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your favorite sibling or mythical character"
            android:inputType="textCapWords"
            android:layout_marginBottom="16dp" />

        <!-- Generate Button -->
        <Button
            android:id="@+id/generateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Sci-Fi Name"
            android:layout_marginTop="8dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- Output TextView -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:text="Your Sci-Fi name will appear here."
            tools:text="JoSmi ChIvy from the planet Dog Yoda" />

    </LinearLayout>
</ScrollView>